# .env.example
# Example environment configuration file
# Copy this to .env and update with your settings

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:4200

# Data Settings
MAX_FILE_SIZE=52428800
SESSION_TIMEOUT=3600
DEFAULT_CSV_PATH=online_retail.csv

# Model Settings
FORECAST_MAX_PERIODS=12
FORECAST_DEFAULT_PERIODS=3
SEGMENTATION_DEFAULT_CLUSTERS=4

# Database (Optional - uncomment to use)
# DATABASE_URL=mysql://user:password@localhost:3306/retail_dss
# MONGODB_URL=mongodb://localhost:27017/retail_dss

# Redis Cache (Optional - uncomment to use)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=300

# Logging
LOG_LEVEL=INFO
